<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	android:fitsSystemWindows="true">

	<LinearLayout

		android:layout_width="match_parent"
		android:layout_height="match_parent"

		android:orientation="vertical">

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="1" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingLeft="12dip">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/label_param"
					android:textAppearance="?android:attr/textAppearanceLarge" />

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/SSP_labela"
						android:layout_width="0dip"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/SSP_label_a" />

					<EditText
						android:id="@+id/SSP_edita"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>
				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/SSP_labell"
						android:layout_width="0dip"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/SSP_label_l" />

					<EditText
						android:id="@+id/SSP_editl"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>
				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:id="@+id/SSP_labelm1"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_m"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_editm"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:id="@+id/SSP_labelm2"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_m2"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_editm2"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:id="@+id/SSP_labelg"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_g"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_editg"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:id="@+id/SSP_label_k"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_k"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_editk"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_gam"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_editgam"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/SSP_init"
					android:textAppearance="?android:attr/textAppearanceLarge" />

				<RadioGroup
					android:id="@+id/SSP_radioGroupInit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<RadioButton
						android:id="@+id/SSP_radioRand"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/SSP_init_rand" />

					<RadioButton
						android:id="@+id/SSP_radioFixed"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/SSP_init_fixed" />

				</RadioGroup>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/SSP_labelx0"
						android:layout_width="0dip"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/SSP_label_x0" />

					<EditText
						android:id="@+id/SSP_editx0"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>
				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:id="@+id/SSP_labelxv0"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_xv0"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_editxv0"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>


				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/SSP_labely0"
						android:layout_width="0dip"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/SSP_label_y0" />

					<EditText
						android:id="@+id/SSP_edity0"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>
				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:id="@+id/SSP_labelyv0"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_yv0"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_edityv0"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/SSP_labelz0"
						android:layout_width="0dip"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/SSP_label_z0" />

					<EditText
						android:id="@+id/SSP_editz0"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>
				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:id="@+id/SSP_labelzv0"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_zv0"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_editzv0"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/SSP_labelth0"
						android:layout_width="0dip"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/SSP_label_th0" />

					<EditText
						android:id="@+id/SSP_editth0"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>
				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:id="@+id/SSP_labelthv0"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_thv0"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_editthv0"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:id="@+id/SSP_labelph0"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_ph0"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_editph0"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>

				<LinearLayout
					android:layout_width="140dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

					<TextView
					android:id="@+id/SSP_labelphv0"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:text="@string/SSP_label_phv0"
					android:layout_weight="1"/>

					<EditText
						android:id="@+id/SSP_editphv0"
						android:layout_width="wrap_content" android:layout_weight="0.25"
						android:layout_height="wrap_content"
						android:inputType="numberDecimal" >
					</EditText>

				</LinearLayout>

				<View
					android:layout_width="fill_parent"
					android:layout_height="15dp" />

				<LinearLayout
					android:layout_width="180dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="center_vertical" >

					<TextView
						android:layout_width="0dip"
						android:layout_height="wrap_content"
						android:text="@string/pendulum_color_1"
						android:layout_weight="1"/>

					<Button
						android:id="@+id/SSP_PendulumColor"
						android:onClick="PendulumColor"

						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center_vertical"/>

				</LinearLayout>

				<View
					android:layout_width="fill_parent"
					android:layout_height="15dp" />

				<LinearLayout
					android:layout_width="180dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="center_vertical" >

					<TextView
						android:layout_width="0dip"
						android:layout_height="wrap_content"
						android:text="@string/pendulum_color_2"
						android:layout_weight="1"/>

					<Button
						android:id="@+id/SSP_PendulumColor2"
						android:onClick="PendulumColor2"

						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center_vertical"/>

				</LinearLayout>

				<View
					android:layout_width="fill_parent"
					android:layout_height="15dp" />

				<CheckBox
					android:id="@+id/SSP_checkBoxTraj"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/SSP_trajectory" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >

						<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/SSP_label_trlength"
						android:layout_weight="1"/>

						<EditText
							android:id="@+id/SSP_edittrajle"
							android:layout_width="wrap_content" android:layout_weight="0.25"
							android:layout_height="wrap_content"
							android:inputType="number" >
						</EditText>

						<CheckBox
							android:id="@+id/SSP_checkBoxTrajInfinite"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="@string/trajectory_infinite" />

				 </LinearLayout>

				<CheckBox
					android:id="@+id/pref_fullscreen_loc"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/pref_fullscreen" />

				<CheckBox
					android:id="@+id/pref_fps_loc"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/pref_fps" />

				<CheckBox
					android:id="@+id/pref_buttons_fade_loc"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/pref_buttons_fade" />

			</LinearLayout>


		</ScrollView>


		<LinearLayout
			style="@android:style/ButtonBar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:id="@+id/SSP_okButton"
				android:onClick="okButton"

				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"

				android:text="@string/button_ok" />

			<Button
				android:id="@+id/SSP_cancelButton"
				android:onClick="cancelButton"

				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"

				android:text="@string/button_cancel" />

			<Button
				android:id="@+id/MP_resetButton"
				android:onClick="resetButton"

				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"

				android:text="@string/button_reset" />

		</LinearLayout>

	</LinearLayout>
</androidx.core.widget.NestedScrollView>