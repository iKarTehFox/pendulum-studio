<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_param"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/PW_label_NP" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="fill_parent" />

                    <EditText
                        android:id="@+id/PW_editNP"
                        android:layout_width="wrap_content" android:layout_weight="0"
                        android:layout_height="wrap_content"
                        android:inputType="number" >
                    </EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/PW_label_NT" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="fill_parent" />

                    <EditText
                        android:id="@+id/PW_editNT"
                        android:layout_width="wrap_content" android:layout_weight="0"
                        android:layout_height="wrap_content"
                        android:inputType="number" >
                    </EditText>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/PW_label_l" />

                <EditText
                    android:id="@+id/PW_editl"
                    android:layout_width="wrap_content" android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/PW_label_m"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/PW_editm"
                    android:layout_width="wrap_content" android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" >
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/PW_labelg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/PW_label_g"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/PW_editg"
                    android:layout_width="wrap_content" android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" >
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/PW_label_k"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/PW_editk"
                    android:layout_width="wrap_content" android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" >
                </EditText>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PW_init"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/PW_radioGroupInit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/PW_radioRand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PW_init_rand" />

                <RadioButton
                    android:id="@+id/PW_radioFixed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PW_init_fixed" />

            </RadioGroup>


            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/PW_label_th0"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/PW_label_th0" />

                <EditText
                    android:id="@+id/PW_editth0"
                    android:layout_width="wrap_content" android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" >
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/pendulum_color"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/PW_PendulumColor"
                    android:onClick="PendulumColor"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <!-- <com.larswerkman.holocolorpicker.ColorPicker
                android:id="@+id/picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/> -->

            <CheckBox
                android:id="@+id/pref_fullscreen_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_fullscreen" />

            <CheckBox
                android:id="@+id/pref_fps_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_fps" />

            <CheckBox
                android:id="@+id/pref_buttons_fade_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_buttons_fade" />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/PW_okButton"
            android:onClick="okButton"

            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/button_ok" />

        <Button
            android:id="@+id/PW_cancelButton"
            android:onClick="cancelButton"

            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/button_cancel" />

        <Button
            android:id="@+id/PW_resetButton"
            android:onClick="resetButton"

            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/button_reset" />

    </LinearLayout>

</LinearLayout>