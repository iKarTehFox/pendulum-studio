<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_param"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SP_label_l" />

                    <EditText
                        android:id="@+id/SP_editl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:inputType="numberDecimal">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SP_label_m" />

                    <EditText
                        android:id="@+id/SP_editm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:inputType="numberDecimal"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SP_labelg"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SP_label_g" />

                    <EditText
                        android:id="@+id/SP_editg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:inputType="numberDecimal"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SP_label_k" />

                    <EditText
                        android:id="@+id/SP_editk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:inputType="numberDecimal"></EditText>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SP_init"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <RadioGroup
                    android:id="@+id/SP_radioGroupInit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/SP_radioRand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SP_init_rand" />

                    <RadioButton
                        android:id="@+id/SP_radioFixed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SP_init_fixed" />

                </RadioGroup>


                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SP_label_th0"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SP_label_th0" />

                    <EditText
                        android:id="@+id/SP_editth0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:inputType="numberDecimal"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SP_label_thv0"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SP_label_thv0" />

                    <EditText
                        android:id="@+id/SP_editthv0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:inputType="numberDecimal"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SP_label_ph0"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SP_label_ph0" />

                    <EditText
                        android:id="@+id/SP_editph0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:inputType="numberDecimal"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SP_label_phv0"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SP_label_phv0" />

                    <EditText
                        android:id="@+id/SP_editphv0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:inputType="numberDecimal"></EditText>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/pendulum_color" />

                    <Button
                        android:id="@+id/SP_PendulumColor"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:onClick="PendulumColor" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="15dp" />

                <CheckBox
                    android:id="@+id/SP_checkBoxTraj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SP_trajectory" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SP_label_trlength" />

                    <EditText
                        android:id="@+id/SP_edittrajle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:inputType="number"></EditText>

                    <CheckBox
                        android:id="@+id/SP_checkBoxTrajInfinite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/trajectory_infinite" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/pref_fullscreen_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_fullscreen" />

                <CheckBox
                    android:id="@+id/pref_fps_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_fps" />

                <CheckBox
                    android:id="@+id/pref_buttons_fade_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_buttons_fade" />

            </LinearLayout>


        </ScrollView>


        <LinearLayout
            style="@android:style/ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/SP_okButton"
                android:layout_width="0dip"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="okButton"

                android:text="@string/button_ok" />

            <Button
                android:id="@+id/SP_cancelButton"
                android:layout_width="0dip"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="cancelButton"

                android:text="@string/button_cancel" />

            <Button
                android:id="@+id/SP_resetButton"
                android:layout_width="0dip"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="resetButton"

                android:text="@string/button_reset" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>